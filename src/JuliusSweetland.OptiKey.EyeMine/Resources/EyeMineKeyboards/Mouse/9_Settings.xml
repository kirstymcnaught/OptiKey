<Keyboard>
  <Name>Settings</Name>
  <SymbolMargin>15</SymbolMargin>
  <BorderThickness>1,1,1,1</BorderThickness>
  <Grid>
    <Rows>5</Rows>
    <Cols>6</Cols>
  </Grid>
  <Content>
    <DynamicKey Row="0" Col="1" Width="2" AutoScaleToOneKeyWidth="false">
      <Label>Walk speed</Label>      
    </DynamicKey>
    <DynamicKey Row="0" Col="3" Width="2" AutoScaleToOneKeyWidth="false">
      <Label>Look speed</Label>
    </DynamicKey>

    <DynamicKey Row="0" Col="5" AutoScaleToOneKeyWidth="false">
      <Label>For more settings,\nright click -> Settings</Label>      
    </DynamicKey>

    <DynamicKey Row="1" Col="0" Height="2" AutoScaleToOneKeyHeight="false">
      <Symbol>MinecraftLookWithCursor</Symbol>
      <Text>y</Text>
      <Label>Look\nwith\nGaze</Label> 
    </DynamicKey>
    <DynamicKey Row="3" Col="0" Height="2" AutoScaleToOneKeyHeight="false">
      <Label>Walk</Label>
      <Symbol>MinecraftWalk</Symbol>
      <Text>h</Text>
    </DynamicKey>

    <DynamicKey Row="1" Col="1" Height="4" AutoScaleToOneKeyHeight="false">
      <Label>—</Label>
      <KeyDown>ArrowDown</KeyDown>
      <Wait>100</Wait>      
      <KeyUp>ArrowDown</KeyUp> 
    </DynamicKey>
    <DynamicKey Row="1" Col="2" Height="4" AutoScaleToOneKeyHeight="false">
      <Label>+</Label>
      <KeyDown>ArrowUp</KeyDown>
      <Wait>100</Wait>      
      <KeyUp>ArrowUp</KeyUp> 
    </DynamicKey>
    <DynamicKey Row="1" Col="3" Height="4" AutoScaleToOneKeyHeight="false">
      <Label>—</Label>
      <KeyDown>ArrowLeft</KeyDown>
      <Wait>100</Wait>      
      <KeyUp>ArrowLeft</KeyUp> 
    </DynamicKey>
    <DynamicKey Row="1" Col="4" Height="4" AutoScaleToOneKeyHeight="false">
      <Label>+</Label>
      <KeyDown>ArrowRight</KeyDown>
      <Wait>100</Wait>      
      <KeyUp>ArrowRight</KeyUp> 
    </DynamicKey>    
    <DynamicKey Row="1" Col="5" Height="4" AutoScaleToOneKeyHeight="false">
      <Symbol>BackIcon</Symbol>
      <Action>BackFromKeyboard</Action>
    </DynamicKey>
  </Content>
</Keyboard>