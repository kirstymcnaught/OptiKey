<Keyboard>
  <Name>Mouse\n+ menus</Name>
  <BorderThickness>0,0,0,0</BorderThickness>
  <InitialKeyStates>
    <KeyUp>MouseMagneticCursor</KeyUp>
  </InitialKeyStates>
  <Grid>
    <Rows>1</Rows>
    <Cols>10</Cols>
  </Grid>
  <Height>15%</Height>
  <Content>
    <DynamicKey>
      <Action>MouseMagnifier</Action>    
      <Label>Magnifier</Label>
      <Symbol>MouseMagnifierIcon</Symbol>  
    </DynamicKey>
    <DynamicKey>
      <KeyToggle>Shift</KeyToggle>    
      <Label>LeftShift</Label>
    </DynamicKey>
    <DynamicKey>
      <KeyToggle>LeftCtrl</KeyToggle>    
      <Label>Ctrl</Label>
    </DynamicKey>
    <DynamicKey>
      <KeyToggle>LeftAlt</KeyToggle>
      <Label>Alt</Label>
    </DynamicKey>
    <DynamicKey>
      <Label>Left\nclick</Label>
      <Symbol>MouseLeftClickWithMouseIcon</Symbol>
      <Action>MouseMoveAndLeftClick</Action>
    </DynamicKey>
    <DynamicKey>
      <Label>Double\nclick</Label>
      <Symbol>MouseLeftDoubleClickWithMouseIcon</Symbol>
      <Action>MouseMoveAndLeftDoubleClick</Action>
    </DynamicKey>
    <DynamicKey>
      <Label>Tab</Label>
      <KeyDown>Tab</KeyDown>
      <Wait>100</Wait>
      <KeyUp>Tab</KeyUp>
    </DynamicKey>    
    <DynamicKey>
      <Label>Return</Label>
      <KeyDown>Return</KeyDown>
      <Wait>100</Wait>
      <KeyUp>Return</KeyUp>
    </DynamicKey>    
    <DynamicKey>
      <Label>Esc</Label>
      <Symbol>MinecraftEscButton</Symbol>
      <Action>Escape</Action>
    </DynamicKey>    
    <DynamicKey>
      <Symbol>BackIcon</Symbol>
      <Action>BackFromKeyboard</Action>
    </DynamicKey>
  </Content>
</Keyboard>